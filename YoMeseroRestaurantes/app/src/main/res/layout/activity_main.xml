<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

<TextView
    android:id="@+id/addItemLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:textColor="#0B466F"
    android:textSize="20dp"
    android:layout_marginTop="14dp"
    android:text="       Agregar Item"
    android:textIsSelectable="true"
    android:layout_alignTop="@+id/button"
    android:layout_centerHorizontal="true" />

<ListView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/itemsListView"
    android:layout_marginTop="13dp"
    android:layout_below="@+id/button"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="+"
    android:id="@+id/button"
    android:background="#ff198642"
    android:textSize="30dp"
    android:onClick="goToItemForm"
    android:textColor="#FFFFFF"
    android:layout_below="@+id/textView"
    android:layout_toLeftOf="@+id/addItemLabel"
    android:layout_toStartOf="@+id/addItemLabel" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Lista de Items"
    android:id="@+id/textView"
    android:textColor="#515E5E"
    android:textSize="25dp"
    android:layout_gravity="center"
    android:layout_alignParentTop="true"
    android:layout_alignRight="@+id/addItemLabel"
    android:layout_alignEnd="@+id/addItemLabel"
    android:textStyle="bold" />

</RelativeLayout>
