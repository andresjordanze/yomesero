<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenid@s a YoMesero"
        android:id="@+id/textView"
        android:textColor="#515E5E"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/imageButton"
        android:src="@mipmap/menu_logo"
        android:onClick="openMenu"
        android:scaleType="fitCenter"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Obten tu menu"
        android:id="@+id/textView2"
        android:layout_above="@+id/imageButton"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <ImageButton
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:id="@+id/imageButton2"
        android:src="@mipmap/restaurants_logo"
        android:onClick="openRestaurants"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ver restaurantes"
        android:id="@+id/textView3"
        android:layout_above="@+id/imageButton2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
